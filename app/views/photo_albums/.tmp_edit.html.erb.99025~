        <% @photos.each do |photo| %>
        <div id="<%= photo.id %>backgroundPopup" style="display: none; position: fixed; position: absolute; height: 100%; width: 100%; top: 0; left: 0; background: black; border: 1px  solid #cecece; z-index: 1;">
